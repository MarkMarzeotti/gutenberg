{
	"name": "core/site-description",
	"category": "layout",
	"supports": {
		"align": [ "wide", "full" ],
		"html": false,
		"multiple": false,
		"reusable": false
	},
	"attributes": {
		"align": {
			"type": "string",
			"default": "wide"
		},
		"textAlign": {
			"type": "string",
			"default": "center"
		},
		"textColor": {
			"type": "string"
		},
		"customTextColor": {
			"type": "string"
		},
		"backgroundColor": {
			"type": "string"
		},
		"customBackgroundColor": {
			"type": "string"
		},
		"fontSize": {
			"type": "string",
			"default": "small"
		},
		"customFontSize": {
			"type": "number"
		}
	}
}
